{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "sourceMap": true,
    "outDir": "./dist",

    "declaration": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "preserveWatchOutput": true,

    "moduleResolution": "node"
  },
  "exclude": ["**/node_modules/", "**/dist/", "**/*.test.ts", "**/*.test.tsx"]
}
