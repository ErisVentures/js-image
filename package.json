{
  "name": "@ouranos/image",
  "version": "0.0.0-development",
  "description": "Collection of image manipulation libraries for node and the browser.",
  "main": "./lib/node-image.js",
  "scripts": {
    "build": "npm run build:ts && npm run build:rollup && npm run build:rollup:minify",
    "build:ts": "tsc",
    "build:rollup": "rollup -c rollup.config.js",
    "build:rollup:minify": "MINIFY=true rollup -c rollup.config.js",
    "test": "npm run test:lint && npm run test:unit",
    "test:unit": "mocha --require source-map-support/register --timeout 20000 --reporter spec 'test/**/*.test.js'",
    "test:lint": "lint -t typescript --ignore 'lib/**/*.d.ts' 'lib/**/*.ts' && lint -t test 'test/**/*.test.js'",
    "test:lint:fix": "lint -t typescript --fix --ignore 'lib/**/*.d.ts' 'lib/**/*.ts' && lint -t test --fix 'test/**/*.test.js'",
    "test:update-expectations": "UPDATE_EXPECTATIONS=true npm run test:unit",
    "test:upload": "bash test/fixtures/upload.sh",
    "test:update-all": "npm run test:update-expectations && npm run test:upload",
    "test:download": "bash test/fixtures/download.sh",
    "test:coverage": "nyc npm run test:unit",
    "test:watch": "mocha --watch --reporter dot 'test/**/*.test.js'",
    "semantic-release": "semantic-release pre && npm publish --access public && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ouranos-oss/js-image.git"
  },
  "author": "Patrick Hulce <patrick.hulce@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ouranos-oss/js-image/issues"
  },
  "homepage": "https://github.com/ouranos-oss/js-image#readme",
  "config": {
    "tslint": {
      "rules": {
        "no-floating-promises": false,
        "no-void-expression": false,
        "restrict-plus-operands": false,
        "prefer-for-of": false,
        "ordered-imports": false,
        "interface-name": false,
        "only-arrow-functions": false,
        "no-unsafe-any": false,
        "no-any": false
      }
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@ouranos/jpeg-js": "^1.0.0",
    "image-type": "^3.0.0",
    "pngjs": "^3.2.0",
    "sharp": "^0.17.3"
  },
  "devDependencies": {
    "@patrickhulce/lint": "^1.1.1",
    "@types/bluebird": "^3.5.3",
    "@types/node": "^7.0.18",
    "@types/sharp": "^0.17.1",
    "babili": "^0.1.2",
    "chai": "^3.5.0",
    "cz-conventional-changelog": "^2.0.0",
    "istanbul": "^0.4.5",
    "lodash": "^4.17.4",
    "mocha": "^3.3.0",
    "nyc": "^10.3.2",
    "rollup": "^0.41.6",
    "rollup-plugin-alias": "^1.3.1",
    "rollup-plugin-babili": "^3.0.0",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "semantic-release": "^6.3.2",
    "sinon": "^2.1.0",
    "sinon-chai": "^2.9.0",
    "source-map-support": "^0.4.15",
    "tslint": "^5.2.0",
    "typescript": "^2.3.2"
  }
}
