{
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"clean": "lerna exec --parallel 'rm -fR dist/'",
		"build": "npm run clean && lerna run build",
		"test": "npm run build && npm run test:lint && npm run test:unit",
		"test:lint": "lerna run test:lint --concurrency 1",
		"test:unit": "mocha --require source-map-support/register --timeout 20000 'packages/*/test/**/*.test.js'",
		"test:coverage": "nyc npm run test:unit"
	},
	"devDependencies": {
		"lerna": "^2.9.1",
		"mocha": "^5.2.0",
		"nyc": "^12.0.1",
		"source-map-support": "^0.5.6",
		"typedoc": "^0.10.0",
		"typescript": "^2.8.1"
	}
}
