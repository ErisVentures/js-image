{
  "name": "@ouranos/image",
  "version": "0.0.0-development",
  "description": "Collection of image manipulation libraries for node and the browser.",
  "main": "./lib/index.js",
  "scripts": {
    "build": "tsc",
    "test": "npm run test:lint && npm run test:unit",
    "test:unit": "mocha --reporter spec 'test/**/*.test.js'",
    "test:lint": "lint -t typescript --ignore 'lib/**/*.d.ts' 'lib/**/*.ts'",
    "test:update-expectations": "UPDATE_EXPECTATIONS=true npm run test:unit",
    "test:upload": "bash test/fixtures/upload.sh",
    "test:update-all": "npm run test:update-expectations && npm run test:upload",
    "test:download": "bash test/fixtures/download.sh",
    "test:coverage": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- 'test/**/*.test.js'",
    "test:watch": "mocha --watch --reporter dot 'test/**/*.test.js'",
    "semantic-release": "semantic-release pre && npm publish --access public && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ouranos-oss/js-image.git"
  },
  "author": "Patrick Hulce <patrick.hulce@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ouranos-oss/js-image/issues"
  },
  "homepage": "https://github.com/ouranos-oss/js-image#readme",
  "config": {
    "tslint": {
      "rules": {
        "no-unsafe-any": false,
        "no-any": false
      }
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "jpeg-js": "^0.2.0",
    "lodash": "^4.17.4",
    "sharp": "^0.17.3"
  },
  "devDependencies": {
    "@patrickhulce/lint": "^1.1.1",
    "@types/bluebird": "^3.5.3",
    "@types/node": "^7.0.18",
    "@types/sharp": "^0.17.1",
    "chai": "^3.5.0",
    "cz-conventional-changelog": "^2.0.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.3.0",
    "nyc": "^10.3.2",
    "semantic-release": "^6.3.2",
    "sinon": "^2.1.0",
    "sinon-chai": "^2.9.0",
    "tslint": "^5.2.0",
    "typescript": "^2.3.2"
  }
}
